{
  "name": "Visual Songbook Dev",
  "image": "ubuntu:22.04",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": "apt-get update && apt-get install -y build-essential curl wget file pkg-config libgtk-3-dev libwebkit2gtk-4.1-dev libayatana-appindicator3-dev librsvg2-dev sudo && npm install && cd src-tauri && cargo fetch",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "svelte.svelte-vscode",
        "rust-lang.rust-analyzer",
        "tauri-apps.tauri-vscode",
        "fill-labs.dependi"
      ]
    }
  },
  "containerEnv": {
    "DISPLAY": ":99",
    "LC_ALL": "C.UTF-8",
    "LANG": "C.UTF-8"
  },
  "onCreateCommand": "Xvfb :99 -screen 0 1024x768x24 -ac +extension GLX +render -noreset > /dev/null 2>&1 &"
}
